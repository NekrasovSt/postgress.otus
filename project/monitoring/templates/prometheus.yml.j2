global:
  scrape_interval: 15s # Set the scrape interval to every 15 seconds. Default is every 1 minute.
  evaluation_interval: 15s

scrape_configs:
  - job_name: postgresql
    static_configs:
      - targets:
          - {{ hostvars['db1'].ansible_host }}:9187
          - {{ hostvars['db2'].ansible_host }}:9187
        labels:
          alias: postgres
